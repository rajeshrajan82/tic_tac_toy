

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container">
    <div class="login">
      <div class="panel panel-default">
        <div class="panel-body">
          <h2>Sign up</h2>
          <%= content_tag(:div, :id => "flash_alert", :class=>"alert alert-danger") do %>
            <%= devise_error_messages! %>
          <%end %>

          <div class="form-group">
            <%= f.email_field :email, :placeholder=> "Email", autofocus: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, :paleholder=> "Password", autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, :paleholder=> "Password Confirmation", autocomplete: "off", class: 'form-control' %>
          </div>
          
          <div class="form-group">  
            <%= f.submit "Register", class: 'btn btn-primary' %>
          </div> 
          <%= link_to "Log in", new_session_path(resource_name) %>
        </div>
      </div>
    </div>  
  </div>
<% end %>
